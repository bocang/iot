<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/lv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">
<RelativeLayout
    android:id="@+id/rl_offline"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/bg_corner_white_5"/>
<LinearLayout
    android:id="@+id/rl_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="20dp"
    android:background="@mipmap/bg_home_device"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >

    <ImageView
        android:id="@+id/iv_img"
        android:src="@mipmap/home_cz"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/str_kaiguan"
            android:id="@+id/tv_name"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_scene"
                android:text="客厅"
                android:textColor="#999999"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="1dp"
                android:background="#999999"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_status"
                android:text="状态"
                android:visibility="gone"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_turn"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/view_2"
        android:visibility="gone"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <View
            android:background="@mipmap/bg_home_device2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    </LinearLayout>

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/gv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="105dp">

        <LinearLayout
            android:id="@+id/ll_bg"
            android:background="@mipmap/bg_home_device"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_img2"
                android:src="@mipmap/home_cz"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:text="@string/str_kaiguan"
                android:id="@+id/tv_name2"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/view_22"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/bg_home_device2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>