<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="45dp">
    <RelativeLayout
        android:onClick="goBack"
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:background="@mipmap/nav_left"
            android:layout_centerInParent="true"
            android:layout_width="10dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <TextView
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:text="@string/str_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
 <RelativeLayout
    android:id="@+id/rl_image"
     android:layout_width="match_parent"
     android:layout_height="45dp">
     <TextView
         android:text="@string/str_img"
         android:textSize="16sp"
         android:textColor="#000"
         android:layout_centerVertical="true"
         android:layout_marginLeft="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <ImageView
         android:background="@mipmap/my_icon_right"
         android:layout_centerVertical="true"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"
         android:layout_width="6dp"
         android:layout_height="12dp"/>

 </RelativeLayout>
    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_alarm_setting"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="@string/str_alarm_setting"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:background="@mipmap/my_icon_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="6dp"
            android:layout_height="12dp"/>

    </RelativeLayout>
    <View
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_sd_card"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="@string/str_store_card"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_sd_card_status"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:text="@string/str_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:background="@mipmap/my_icon_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="6dp"
            android:layout_height="12dp"/>
    </RelativeLayout>
    <View
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv_unbind"
        android:textSize="14sp"
        android:textColor="@color/blue_theme"
        android:text="@string/str_unbind_dev"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <TextView
        android:id="@+id/tv_restart"
        android:textSize="14sp"
        android:textColor="@color/blue_theme"
        android:text="@string/str_restart"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <View
        android:background="#f4f4f4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>