<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.view.CircleImageView
        android:id="@+id/iv_bg"
        app:type="2"
        android:src="@mipmap/img_bg_scene"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.view.CircleImageView
        android:id="@+id/iv_color"
        app:type="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_name"
        android:text=""
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_dev_count"
        android:textColor="#e5e5e5"
        android:textSize="10sp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/tv_doit"
        android:background="@mipmap/icon_scene_auto_on"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:layout_width="41dp"
        android:layout_height="45dp" />
    <LinearLayout
        android:id="@+id/ll_pic"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="70dp">

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:background="@drawable/bg_corner_white_5"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <com.view.FontIconView
            android:id="@+id/iv_img_auto"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_setting"
        android:layout_width="45dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_height="45dp">
        <com.view.FontIconView
            android:id="@+id/iv_setting"
            android:text="@string/icon_setting"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>

</RelativeLayout>