<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="345dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_white_15">
    <TextView
        android:id="@+id/tv_title"
        android:textSize="16sp"
        android:textColor="#333333"
        android:text="确认删除"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/str_room_delete_tips"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#999999"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:background="#e4e4e4"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:text="@string/cancle"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_width="0dp"
            android:background="@drawable/bg_corner_trans_left_bottom"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <View
            android:background="#e4e4e4"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_ensure"
            android:text="@string/str_delete"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:background="@drawable/bg_corner_trans_right_bottom"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>