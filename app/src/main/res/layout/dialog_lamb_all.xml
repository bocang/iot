<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/bg_corner_white_15_top">
    <TextView
        android:text="@string/str_all_lamb"
        android:textSize="18sp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <View
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/tv_bright_progress"
        android:text="亮度: 0%"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:text="0"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/sb_bright"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="260dp"
            android:progressDrawable="@drawable/po_seekbar_light"
            android:thumb="@drawable/seekbar_thumb"
            android:padding="11dp"
            android:layout_height="28dp"/>
        <TextView
            android:text="100"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_temp"
        android:text="色温: 2000k"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:text="2000"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/sb_temp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="260dp"
            android:progressDrawable="@drawable/po_seekbar_light_temp"
            android:thumb="@drawable/seekbar_thumb"
            android:padding="11dp"
            android:layout_height="28dp"/>
        <TextView
            android:text="7000"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_white_light"
        android:gravity="center"
        android:text="白光"
        android:textSize="16sp"
        android:textColor="@color/blue_theme"
        android:background="@drawable/bg_corner_blue_15"
        android:layout_width="80dp"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/tv_yellow_light"
        android:gravity="center"
        android:text="黄光"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="#f39800"
        android:background="@drawable/bg_corner_orange_empty_15"
        android:layout_width="80dp"
        android:layout_height="35dp"/>
    </LinearLayout>
    <com.view.FontIconView
        android:id="@+id/tv_switch"
        android:text="@string/icon_lamb_switch"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_corner_theme_25"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


</LinearLayout>
